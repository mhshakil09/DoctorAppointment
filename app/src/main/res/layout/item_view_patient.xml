<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:backgroundTint="@color/white"
    android:padding="10dp"
    app:cardCornerRadius="4dp"
    android:id="@+id/patientSlot"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/patientNameTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:textSize="18sp"
            android:textColor="@color/black_80"
            android:text="Patient: Asif Ahsan"
            tools:text="Patient: Asif Ahsan"/>

        <TextView
            android:id="@+id/appointmentDateTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:padding="4dp"
            android:textSize="12sp"
            android:textColor="@color/black_80"
            android:text="Appointment Date: 28 December, 2021"
            tools:text="Appointment Date: 28 December, 2021"/>

        <TextView
            android:id="@+id/appointmentTimeTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:textSize="12sp"
            android:textColor="@color/black_80"
            android:text="Appointment Time: Saturday, 12:00PM - 12:20PM"
            tools:text="Appointment Time: Saturday, 12:00PM - 12:20PM"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/feeTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="4dp"
                android:textSize="12sp"
                android:textColor="@color/black_80"
                android:text="Fees: BDT 300"
                tools:text="Fees: BDT 300"/>

            <TextView
                android:id="@+id/feeStatusTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:gravity="end"
                android:padding="4dp"
                android:textSize="12sp"
                android:textColor="@color/green"
                android:text="Paid"
                tools:text="Paid"/>
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="View Details"
            android:textSize="12dp"
            android:layout_gravity="center"/>

    </LinearLayout>


</androidx.cardview.widget.CardView>