<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.patient_details.PatientDetailsActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/patientDetailsCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:backgroundTint="@color/white"
        android:padding="10dp"
        app:cardCornerRadius="4dp"
        android:layout_margin="10dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/patientNameTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:textSize="18sp"
                android:textColor="@color/black_80"
                android:text="Patient: Asif Ahsan"
                tools:text="Patient: Asif Ahsan"/>

            <TextView
                android:id="@+id/appointmentDateTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:padding="4dp"
                android:textSize="12sp"
                android:textColor="@color/black_80"
                android:text="Appointment Date: 28 December, 2021"
                tools:text="Appointment Date: 28 December, 2021"/>

            <TextView
                android:id="@+id/appointmentTimeTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:textSize="12sp"
                android:textColor="@color/black_80"
                android:text="Appointment Time: Saturday, 12:00PM - 12:20PM"
                tools:text="Appointment Time: Saturday, 12:00PM - 12:20PM"/>

            <LinearLayout
                android:id="@+id/feeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/feeTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="4dp"
                    android:textSize="12sp"
                    android:textColor="@color/black_80"
                    android:text="Fees: BDT 300"
                    tools:text="Fees: BDT 300"/>

                <TextView
                    android:id="@+id/feeStatusTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:padding="4dp"
                    android:textSize="12sp"
                    android:textColor="@color/green"
                    android:text="Paid"
                    tools:text="Paid"/>
            </LinearLayout>

            <TextView
                android:id="@+id/ageTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="4dp"
                android:textSize="12sp"
                android:textColor="@color/black_80"
                android:text="Age: 42 years"
                tools:text="Age: 42 years"/>

            <TextView
                android:id="@+id/sexTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="4dp"
                android:textSize="12sp"
                android:textColor="@color/black_80"
                android:text="Sex: Male"
                tools:text="Sex: Male"/>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/cancelAppointmentBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel Appointment"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/patientDetailsCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>